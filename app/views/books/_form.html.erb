<%= form_with model: book, local: true do |f| %>
<div>
  <%= f.label :title %> <%= f.text_field :title %>
</div>
<div>
  <%= f.label :pub_year %> <%= f.text_field :pub_year %>
</div>
<div>
  <%= f.label :author %>
  <%#
    collection_select(model, foreign_key, foreign collection, primary key, label)
  %>
  <%= collection_select(:book, :author_id, Author.all, :id, :full_name) %>
</div>
<div>
  <%= f.submit %>
</div>
<% end %>
